[Create React Project]
npx create-react-app wai261 --template typescript


[Install ChakraUI]
npm install @chakra-ui/react @emotion/react@^11 @emotion/styled@^11 framer-motion@^5


[Replacement code for App.tsx after installing ChakraUI]
import * as React from 'react'

// 1. import `ChakraProvider` component
import { ChakraProvider, Heading } from '@chakra-ui/react'

function App() {
  // 2. Use at the root of your app
  return (
    <ChakraProvider>
      <Heading>ChakraUI Heading</Heading>
    </ChakraProvider>
  )
}
export default App;


